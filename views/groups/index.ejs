<% layout('layouts/boilerplate.ejs') %>
<header>
           <div class="name-wrapper">
                <h1 class="contact-name">Manage Groups</h1>
            </div>
        </header>
        <div class="flash <%= flashClass %>">
            <%= flashMsg %>
        </div>
        <section class="info-card">
           <form id="group-form" method="post" action="/groups">
                <div class="form-field info">
                    <label for="group">New Group Name: </label>
                    <input type="text" name="group" id="group">
                </div>
                <div class="groups">
                <div class="group-title info"><span>Groups</span> <span>select groups to delete</span></div>
                    <div class="group-tags">
                        <% for (let group of groups) { %>
                            <div class="tag">
                                <label for="<%= group.name %>"><input type="checkbox" name="groupName" id="<%= group.name %>" value="<%= group._id %>"><%= group.name %></label>
                            </div>
                        <% } %>
                </div>
                <input type="hidden" value="<%= returnTo %>" name="returnTo" />
           </form>
           <div class="button-section">
                <button form="group-form" class="btn">Save</button>
                <form method='get' action="/<%= returnTo %>">
                    <button type="submit" class="btn">Cancel</button>
                </form>
            </div> 
        </section>