<% layout('layouts/boilerplate.ejs') %>
<header>
           <div class="name-wrapper">
                <h1 class="contact-name">Edit Group</h1>
            </div>
        </header>
        <div class="flash on">Group Name cannot be empty</div>
        <section class="info-card">
           <form id="group-form">
            <div class="form-field info">
                <label for="group">New Group Name: </label>
                <input type="text" name="group" id="group">
            </div>
            <div class="groups">
                <div class="group-title info"><span>Groups</span><a href="#">+</a></div>
                    <div class="group-tags">
                        <div class="tag">
                            <label for="work"><input type="checkbox" id="work">Work</label>
                        </div>
                        <div class="tag">
                            <input type="checkbox" id="friends"><label for="friends">Friends</label>
                        </div>
                    </div>
                </div>
           </form>
           <div class="button-section">
                <button form="group-form" class="btn">Save</button>
                <button class="btn">Cancel</button>
            </div> 
        </section>